<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

 <h4>Title</h4>
 <div><%= f.text_field :title %></div>
 <h4>Body</h4>
 <div><%= f.text_area :body %></div>
 <div><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to"Show", book_path(@book.id) %> | <a href="/books">Back</a>